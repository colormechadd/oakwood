extends layout

block content
    div(ng-controller="NewRacersCtrl")
        header
            h1 Add Racer

        form(ng-submit="submit()", name="racer")
            div
                label Racer Name
                input(type="text", ng-model="racer_name", name="racer_name", ng-minlength="3", required)
                span(ng-show="racer.$submitted && !racer.racer_name.$valid") Make your name longer

            div
                label Car Name
                input(type="text", ng-model="car_name", name="car_name", ng-minlength="3", required)
                span(ng-show="racer.$submitted && !racer.car_name.$valid") Make your name longer

            div
                input(type="submit", value="Create")